<div class="container">

    <form class="form-signin" action="/book/save" method="post">
        <h2 class="form-signin-heading">Add new book</h2>
        <input type="text" name="title" class="form-control" placeholder="Title">
        <input type="text" name="isbn" class="form-control" placeholder="ISBN">
        <input type="text" name="authors" class="form-control" placeholder="Authors">
        <input type="text" name="publisher" class="form-control" placeholder="Publisher">

        <button class="btn btn-lg btn-primary btn-block" type="submit">Add book</button>
    </form>

</div>